/* pages/it_detail/it_detail.wxss */ 
::-webkit-scrollbar{
  color: white;
  width: 0px;
  background-color: white;
}
.title_item{
  margin: auto;
  display: inline-block;
  text-align: center;
  font-size: 0.9em;
  padding-left: 15px;
  padding-right: 15px;
  background-color: #fff;
}
.container{
  margin: auto;
  padding-top: 0px;
  padding-bottom: 2px;
  background-color: #fff;
  white-space: nowrap;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  flex-flow: nowrap;

}
.divide_line{
  width: 100%;
  height: 2px;
  background-color: #ccc;
}

 .item_contaner{
  display:flex;
  flex-direction: column;
  align-content: center;
  justify-content: center;
  width: 375rpx;
  margin-top: 20px;
  margin-bottom: 20px; 
  padding-top: 200px;
}
.item_title{
  height: 40 rpm;
  text-align: bottom;
  font-size: 0.8em;
  color: #333333;
  margin-bottom: 10px;
}
.item_img_container{
  position: relative;
  width: 375rpx;
  height: 400rpx;
  margin-bottom: 20px;
}
.item_price{
  width: 375rpx;
  height: 30px;
  margin: auto;
  position: absolute;
  bottom: 0px;
  left: 0px;
  background: #cccccc;
  color: white;
  font-size: 0.8em;
  padding-top: 10px;
  text-align: bottom;
}
.item_img{
  width: 375rpx;
  height: 400rpx;
  margin: auto;
} 

.goods_container{
  display: flex;
  width: 750rpx;
  flex-direction: row;
  justify-content: center;
  align-content: flex-start;
  flex-flow: nowrap;
}